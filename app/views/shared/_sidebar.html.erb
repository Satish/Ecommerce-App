<% sidebar_navigation_section "Shop By Category" do %>
  <% for category in @store.categories.roots -%>
    <li>
      <%= link_to h(category.title.capitalize), category, :title => h(category.title.capitalize) -%>
      <ul class = "navSectionDesc">
      <% for child_category in category.children -%>
        <li style = "font-weight:normal; font-size: 1em;"><%= link_to h(child_category.title.capitalize), category, :title => h(child_category.title.capitalize) -%></li>
      <% end -%>
      </ul>
    </li>
  <% end -%>
<% end %>
<% sidebar_navigation_section "Shop By Brand" do %>
  <% for brand in @store.brands -%>
    <li><%= link_to brand.name, brand, :title => brand.name -%></li>
  <% end -%>
<% end %>