<% div_for comment do %>
   <span class = "commentAuthor"><%= link_to_unless comment.author_url.blank?, h(comment.author), comment.author_url -%></span> said
   <span class = "postDate"><%=  time_ago_in_words(comment.created_at) + ' ago' -%></span>
   <div class = "commentDescription"><%= h(comment.description) -%></div>
<% end %>
