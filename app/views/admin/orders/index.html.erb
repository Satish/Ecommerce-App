<div class="container"><%= render :partial => 'admin/shared/search' -%></div>
<div class="container">
  <span class = "floatRight marginTop4" id = "page_entries_info"><%= page_entries_info @orders, :entry_name => '' -%></span>
  <h1 class="pageHeading floatLeft">Orders</h1>
  <div class = "headerLinks">
    <%= link_to 'All', admin_orders_path, :class => "subLink #{ get_css_class_for_order_links(params[:status], '')}" -%>
    <%= link_to 'In Complete', admin_orders_path(:status => "checking_out"), :class => "subLink #{ get_css_class_for_order_links(params[:status], 'checking_out')}"-%>
    <%= link_to 'Pending', admin_orders_path(:status => "pending"), :class => "subLink #{ get_css_class_for_order_links(params[:status], 'pending')}" -%>
    <%= link_to 'Approved/Processing', admin_orders_path(:status => "processing"), :class => "subLink #{ get_css_class_for_order_links(params[:status], 'processing')}" -%>
    <%= link_to 'Rejected', admin_orders_path(:status => "rejected"), :class => "subLink #{ get_css_class_for_order_links(params[:status], 'rejected')}" -%>
    <%= link_to 'On Hold', admin_orders_path(:status => "on_hold"), :class => "subLink #{ get_css_class_for_order_links(params[:status], 'on_hold')}" -%>
  </div>
</div>

<div class="container">
  <%= render :partial => 'orders' -%>
</div>