<% @skus.each_with_index do |sku, index| -%>
  <% div_for sku, :class => "tableRow #{cycle('odd', 'even')}" do -%>
    <span class = "pct10 textAlignCenter"><%= index + 1 -%></span>
    <span class = "pct10 textAlignCenter"><%= sku.number -%></span>
    <span class = "pct40"><h3 class = "title"><%#= link_to h(truncate(sku.name, :length => 25)), [:admin, sku], :title => h(sku.name) -%></h3></span>
    <span class = "pct10 textAlignCenter"><%= number_to_currency(sku.additional_price) -%></span>
    <span class = "pct10 textAlignCenter"><%= number_to_currency(sku.quantity) -%></span>
    <span class = "pct10 textAlignCenter"><%= sku.active? ? 'Active' : 'Inactive' -%></span>
    <span class = "pct10 textAlignCenter">
      <%= link_to(image_tag("admin/iconEdit.png", :alt => "edit"), [:edit, :admin, @product, sku], :title => "Edit") -%>
      <%= link_to(image_tag("admin/iconDelete.png", :alt => "X"), [:admin, @product, sku], :title => "Delete", :method => :delete, :confirm => " Deleting sku '#{ sku.name }'\n Are you Sure?") -%>
    </span>
  <% end -%>
<% end -%>
<% if @skus.total_pages > 1 %>
  <div class = "tableRow pct100 <%= cycle('odd', 'even') %>">
    <%= will_paginate(@skus, :class => "pagination textAlignCenter", :id => "pagination") -%>
  </div>
<% end %>