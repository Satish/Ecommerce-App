<div class="container"><%= render :partial => 'admin/shared/search' -%></div>
<div class="container">
  <span class = "floatRight marginTop4"><%= page_entries_info @skus, :entry_name => '' -%></span>
  <h1 class="pageHeading">skus(<%= link_to "+", new_admin_product_sku_path(@product), :title => "Create New Sku" -%>)</h1>
</div>

<div class="container">
  <% if @skus.size > 0 -%>
    <div class="table">
      <div class = "tableHeader">
        <span class = "pct10">Sr. NO.</span>
        <span class = "pct20">Sku Number</span>
        <span class = "pct40">Quantity</span>
        <span class = "pct20">Additional Price</span>
        <span class = "pct10">-</span>
      </div>
      <%= render :partial => 'skus' -%>
    </div>
	<% else %>
    <div class = "noRecords">There are no skus</div>     
  <% end -%>
</div>