<div id = 'dashboard' class = "container">
  <div id = "ordersBlock">
    <h1 class = "title">Orders</h1>
    <% unless @pending_orders.empty? && @incomplete_orders.empty? && @on_hold_orders.empty? -%>
      <% unless @incomplete_orders.empty? -%>
        <div class = "description"><%= link_to(pluralize(@incomplete_orders.size, 'order is', 'orders are') + " incomplete", admin_orders_path(:status => 'checking_out')) -%></div>
      <% end -%>
      <% unless @pending_orders.empty? -%>
        <div class = "description" ><%= link_to(pluralize(@pending_orders.size, 'order is', 'orders are') + " pending approval", admin_orders_path(:status => 'pending')) -%></div>
      <% end -%>
      <% unless @on_hold_orders.empty? -%>
        <div class = "description" ><%= link_to(pluralize(@on_hold_orders.size, 'order is', 'orders are') + " on hold", admin_orders_path(:status => 'on_hold')) -%></div>
      <% end -%>
    <% else -%>
      There are no pending/incomplete/on hold orders
    <% end -%>
  </div>
</div>