<% @user.password = @user.password_confirmation = nil %>
<%= error_messages_for :user -%>
<% form_for :user, :url => admin_users_path do |f| -%>
  <div class="formRow transparent">
    <%= f.label :login -%><br/>
    <%= f.text_field :login, :class => "text important styledFormElement" -%>
  </div>
  <div class="formRow transparent">
    <%= f.label :email -%><br/>
    <%= f.text_field :email, :class => "text important styledFormElement" -%>
  </div>
  <div class="formRow transparent">
    <%= f.label :password -%><br/>
    <%= f.password_field :password, :class => "text important styledFormElement" -%>
  </div>
  <div class="formRow transparent">
    <%= f.label :password_confirmation, 'Confirm Password' -%><br/>
    <%= f.password_field :password_confirmation, :class => "text important styledFormElement" -%>
  </div>
  <div class="formRow transparent">
    <%= f.label '' -%>
    <%= f.submit 'Save' -%> or <%= link_to 'Cancel', :back -%>
  </div>
<% end -%>