<div class="container"><%= render :partial => 'admin/shared/search' -%></div>
<div class="container">
  <span class = "floatRight marginTop4"><%= page_entries_info @categories, :entry_name => '' -%></span>
  <h1 class="pageHeading">Categories(<%= link_to "+", new_admin_category_path, :title => "Create New Category" -%>)</h1>
</div>

<div class="container">
  <% if @categories.size > 0 -%>
    <div class="table">
      <div class = "tableHeader">
        <span class = "pct10">Sr. NO.</span>
        <span class = "pct50 textAlignLeft">Title</span>
        <span class = "pct10">Date</span>
        <span class = "pct10">Status</span>
        <span class = "pct10">-</span>
      </div>
      <%= render :partial => 'categories' -%>
    </div>
	<% else %>
    <div class = "noRecords">There are no categories</div>     
  <% end -%>
</div>