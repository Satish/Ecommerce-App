<% @categories.each_with_index do |category, index| -%>
  <% div_for category, :class => "tableRow #{cycle('odd', 'even')}" do -%>
    <span class = "pct10 textAlignCenter"><%= index + 1 -%></span>
    <span class = "pct50"><h3 class = "title"><%= link_to h(category.title), [:admin, category], :title => h(category.title) -%></h3></span>
    <span class = "pct10 textAlignCenter"><%= category.created_at.strftime("%d/%m/%Y") -%></span>          
    <span class = "pct10 textAlignCenter"><%= category.active? ? 'Active' : 'Inactive' -%></span>
    <span class = "pct10 textAlignCenter">
      <%= link_to(image_tag("admin/iconEdit.png", :alt => "edit"), [:edit, :admin, category], :title => "Edit") -%>
      <%= link_to(image_tag("admin/iconDelete.png", :alt => "X"), [:admin, category], :title => "Delete", :method => :delete, :confirm => " Deleting Product Attribute '#{ category.title }'\n Are you Sure?") -%>
    </span>
  <% end -%>
<% end -%>
<% if @categories.total_pages > 1 %>
  <div class = "tableRow pct100 <%= cycle('odd', 'even') %>">
    <%= will_paginate(@categories, :class => "pagination textAlignCenter", :id => "pagination") -%>
  </div>
<% end %>