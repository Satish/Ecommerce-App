<div class="container"><%= render :partial => 'admin/shared/search' -%></div>
<div class="container">
  <span class = "floatRight marginTop4" id = "page_entries_info"><%= page_entries_info @products, :entry_name => '' -%></span>
  <h1 class="pageHeading">Add Products to <em><%= link_to h(@category.title), [:admin, @category] -%></em></span></h1>
</div>
<div class="container">
  <% unless @products.empty? -%>
    <% form_for([:add_products, :admin, @category]) do |f| -%>
      <div class="formRow transparent" style = "float:left"><%= f.submit "Add Products", :class => "button" -%></div>
      <%= render :partial => 'products' -%>
      <div class="formRow transparent" style = "float:left"><%= f.submit "Add Products", :class => "button" -%></div>
    <% end -%>
  <% else %>
    <div class = "noRecords">There are no products</div>  
  <% end %>
</div>