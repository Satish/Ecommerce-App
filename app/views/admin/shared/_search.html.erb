<div class = "search">
  <% form_tag request.path, :method => 'get' do -%>
    <% content_tag :label do -%>
      Search term:
    <% end %>
    <%= text_field_tag :search, params[:search], :class => "text important styledFormElement" -%>
    <span class="formRow transparent">
      <%= submit_tag 'Search', :class => "button" -%>
    </span>
  <% end -%>
</div>
