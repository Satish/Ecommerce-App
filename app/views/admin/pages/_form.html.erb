<div class="addnewpage item">
  <% form_for([:admin, @page]) do |f| -%>
    <%= f.error_messages -%>
    <div class="formRow transparent">
   		<%= f.label :title -%>
   		<%= f.text_field :title, :class => "text important styledFormElement" -%>
   	</div>
   	<div class="formRow transparent">
   		<%= f.label :permalink -%>
   		<%= f.text_field :permalink, :class => "text important styledFormElement" -%>
   	</div>
   	<div class="formRow transparent">
   		<%= f.label :description -%>
   		<%= f.text_area :description, :class => "mceEditor styledFormElement" -%>
   	</div>
    <div class="formRow transparent">
   		<%= f.label :active -%>
   		<%= f.check_box :active, :class => "styledFormElement" -%>
   	</div>
    <div class="formRow transparent">
      <%= f.submit @page.new_record? ? "Create" : "Update", :class => "button" -%>&nbsp; or &nbsp;
      <%= link_to "Cancel", [:admin, Page.new] -%>
    </div>
  <% end -%>
</div> 