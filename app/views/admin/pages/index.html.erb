<div class="container"><%= render :partial => 'admin/shared/search' -%></div>
<div class="container">
  <span class = "floatRight marginTop4"><%= page_entries_info @pages, :entry_name => '' -%></span>
  <h1 class="pageHeading">Pages(<%= link_to "+", new_admin_page_path, :title => "Create New Page" -%>)</h1>
</div>
<div class="container">
  <% if @pages.size > 0 -%>
    <div class="table">
      <div class = "tableHeader">
        <span class = "pct10">Sr. NO.</span>
        <span class = "pct60 textAlignLeft">Title</span>
        <span class = "pct10">Created At</span>
        <span class = "pct10">Status</span>
        <span class = "pct10">-</span>
      </div>
      <%= render :partial => 'pages' -%>
    </div>
	<% else %>
    <div class = "noRecords">There are no pages</div>     
  <% end -%>
</div>