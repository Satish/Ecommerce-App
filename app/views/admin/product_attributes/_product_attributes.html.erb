<% @product_attributes.each_with_index do |product_attribute, index| -%>
  <% div_for product_attribute, :class => "tableRow #{cycle('odd', 'even')}" do -%>
    <span class = "pct10 textAlignCenter"><%= index + 1 -%></span>
    <span class = "pct50"><h3 class = "title"><%= h(product_attribute.name) -%></h3></span>
    <span class = "pct10 textAlignCenter"><%= product_attribute.created_at.strftime("%d/%m/%Y") -%></span>          
    <span class = "pct10 textAlignCenter"><%= product_attribute.active? ? 'Active' : 'Inactive' -%></span>
    <span class = "pct10 textAlignCenter">
      <%= link_to(image_tag("admin/iconEdit.png", :alt => "edit"), [:edit, :admin, product_attribute], :title => "Edit") -%>
      <%= link_to(image_tag("admin/iconDelete.png", :alt => "X"), [:admin, product_attribute], :title => "Delete", :method => :delete, :confirm => " Deleting Product Attribute '#{ product_attribute.name }'\n Are you Sure?") -%>
    </span>
  <% end -%>
<% end -%>
<% if @product_attributes.total_pages > 1 %>
  <div class = "tableRow pct100 <%= cycle('odd', 'even') %>">
    <%= will_paginate(@product_attributes, :class => "pagination textAlignCenter", :id => "pagination") -%>
  </div>
<% end %>