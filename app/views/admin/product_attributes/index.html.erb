<div class="container"><%= render :partial => 'admin/shared/search' -%></div>
<div class="container">
  <span class = "floatRight marginTop4"><%= page_entries_info @product_attributes, :entry_name => '' -%></span>
  <h1 class="pageHeading">Product Attributes(<%= link_to "+", new_admin_product_attribute_path, :title => "Create New Product Attribute" -%>)</h1>
</div>

<div class="container">
  <% if @product_attributes.size > 0 -%>
    <div class="table">
      <div class = "tableHeader">
        <span class = "pct10">Sr. NO.</span>
        <span class = "pct50 textAlignLeft">Name</span>
        <span class = "pct10">Date</span>
        <span class = "pct10">Status</span>
        <span class = "pct10">-</span>
      </div>
      <%= render :partial => 'product_attributes' -%>
    </div>
	<% else %>
    <div class = "noRecords">There are no product attributes</div>     
  <% end -%>
</div>