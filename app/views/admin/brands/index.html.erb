<div class="container"><%= render :partial => 'admin/shared/search' -%></div>
<div class="container">
  <span class = "floatRight marginTop4"><%= page_entries_info @brands, :entry_name => '' -%></span>
  <h1 class="pageHeading">Brands(<%= link_to "+", new_admin_brand_path, :title => "Create New Brand" -%>)</h1>
</div>

<div class="container">
  <% if @brands.size > 0 -%>
    <div class="table">
      <div class = "tableHeader">
        <span class = "pct10">Sr. NO.</span>
        <span class = "pct50 textAlignLeft">Title</span>
        <span class = "pct10">Products</span>
        <span class = "pct10">Status</span>
        <span class = "pct10">-</span>
      </div>
      <%= render :partial => 'brands' -%>
    </div>
	<% else %>
    <div class = "noRecords">There are no brands</div>     
  <% end -%>
</div>