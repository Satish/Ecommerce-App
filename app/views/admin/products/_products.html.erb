<% @products.each_with_index do |product, index| -%>
  <% div_for product, :class => "tableRow #{cycle('odd', 'even')}" do -%>
    <span class = "pct10 textAlignCenter"><%= index + 1 -%></span>
    <span class = "pct10 textAlignCenter"><%= product.product_id -%></span>
    <span class = "pct40"><h3 class = "title"><%= link_to h(truncate(product.name, :length => 25)), [:admin, product], :title => h(product.name) -%></h3></span>
    <span class = "pct10 textAlignCenter"><%= number_to_currency(product.price) -%></span>
    <span class = "pct10 textAlignCenter"><%= number_to_currency(product.discount) -%></span>
    <span class = "pct10 textAlignCenter"><%= product.active? ? 'Active' : 'Inactive' -%></span>
    <span class = "pct10 textAlignCenter">
      <%= link_to(image_tag("admin/iconEdit.png", :alt => "edit"), [:edit, :admin, product], :title => "Edit") -%>
      <%= link_to(image_tag("admin/iconDelete.png", :alt => "X"), [:admin, product], :title => "Delete", :method => :delete, :confirm => " Deleting Product '#{ product.product_id }'\n Are you Sure?") -%>
      <%= link_to("SKUs (#{ product.skus.count })", [:admin, product, Sku.new], :title => "Product SKUs") -%>
    </span>
  <% end -%>
<% end -%>
<% if @products.total_pages > 1 %>
  <div class = "tableRow pct100 <%= cycle('odd', 'even') %>">
    <%= will_paginate(@products, :class => "pagination textAlignCenter", :id => "pagination") -%>
  </div>
<% end %>