<div class="container post">
  <span class = "floatRight marginTop4"><%= link_to 'Back to Orders', [:admin, Order.new] -%></span>
  <h2 class="pageHeading">Edit Order</h2>
  <div id='editOrderForm' class="formContainer create">
    <div class="addnewpost item">
      <% form_for([:admin, @order, Shipment.new]) do |f| -%>
        <%= f.error_messages -%>
        <% fields_for "shipping_address", @shipment.shipping_address do |shipping_address| %>
          <div id = "shippingAddress" class = "address">
            <%= render :partial => 'admin/orders/address_form', :locals => { :f => shipping_address, :address => @shipment.shipping_address } -%>
          </div>
        <% end -%>
        <div class="formRow transparent">
    	    <%= f.label :tracking_number -%>
    	    <%= f.text_field :tracking_number, :class => "text important styledFormElement" -%>
        </div>
        <div class="formRow transparent">
    	    <%= f.label :shipping_method_id -%>
    	    <%= f.select :shipping_method, select_options_for_shipping_method, { :include_blank => 'Select Payment Type' }, :class => "text important styledFormElement" -%>
        </div>
        <div class="formRow transparent">
          <%= f.submit "Save!", :class => "button" -%>&nbsp; or &nbsp;
          <%= link_to "Cancel", [:admin, @order] -%>
        </div>
      <% end -%>
    </div>
  </div>
</div>