<div id = "email_templates">
  <% if @email_templates.size > 0 -%>
    <% paginated_section @email_templates, :class => "pagination", :renderer => RemoteLinkRenderer do %>
    <span class="pageLoadingIndicator" id = "pageLoadingIndicator" style = "display:none"><%= image_tag("/images/admin/indicator.gif", {:alt => "progressIndicator", :size => "15x15"}) -%></span>  
      <div class="table">
        <div class = "tableHeader">
          <span class = "pct10">Sr. NO.</span>
          <span class = "pct20 textAlignLeft">Name</span>
          <span class = "pct30 textAlignLeft">Emails</span>
          <span class = "pct35 textAlignLeft">Subject</span>
          <span class = "pct5">-</span>
        </div>
        <% @email_templates.each_with_index do |email_template, index| -%>
          <% div_for email_template, :class => "tableRow #{cycle('odd', 'even')}" do -%>
            <span class = "pct10 textAlignCenter"><%= index + 1 -%></span>
            <span class = "pct20"><h3 class = "title"><%= link_to h(email_template.name.titleize), [:edit, :admin, email_template], :title => h(email_template.name.titleize) -%></h3></span>
            <span class = "pct30">
              From: <%= h(email_template.from) -%><br/>
              cc: <%= h(email_template.cc) -%><br/>
              bcc: <%= h(email_template.bcc) -%><br/>
            </span>
            <span class = "pct35"><%= h(email_template.subject) -%>&nbsp;</span>
            <span class = "pct5 textAlignCenter">
              <%= link_to(image_tag("admin/iconEdit.png", :alt => "edit"), [:edit, :admin, email_template], :title => "Edit") -%>
            </span>
          <% end -%>
        <% end -%>
      </div>
    <% end %>
  <% else %>
    <div class = "noRecords">There are no email templates</div>     
  <% end -%>
</div>