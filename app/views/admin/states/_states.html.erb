<div id = "states">
  <% unless @states.empty? -%>
    <% paginated_section @states, :class => "pagination", :renderer => RemoteLinkRenderer do %>
    <span class="pageLoadingIndicator" id = "pageLoadingIndicator" style = "display:none"><%= image_tag("/images/admin/indicator.gif", {:alt => "progressIndicator", :size => "15x15"}) -%></span>  
      <div class="table">
        <div class = "tableHeader">
          <span class = "pct10">Sr. NO.</span>
          <span class = "pct40 textAlignLeft">Name</span>
          <span class = "pct40">Abbr</span>
          <span class = "pct10">-</span>
        </div>
        <% @states.each_with_index do |state, index| -%>
          <% div_for state, :class => "tableRow #{cycle('odd', 'even')}" do -%>
            <span class = "pct10 textAlignCenter"><%= index + 1 -%></span>
            <span class = "pct40"><%= h(state.name) -%></span>
            <span class = "pct40 textAlignCenter"><%= h(state.abbr) -%></span>
            <span class = "pct10 textAlignCenter">
              <%= link_to(image_tag("admin/iconEdit.png", :alt => "edit"), [:edit, :admin, @store_country, state], :title => "Edit") -%>
              <%= link_to_remote(image_tag("admin/iconDelete.png", :alt => "X"), :url => [:admin, @store_country, state], :title => "Delete", :method => :delete, :confirm => " Deleting state '#{ state.name }'\n Are you Sure?") -%>
            </span>
          <% end -%>
        <% end -%>
      </div>
    <% end %>
  <% else %>
    <div class = "noRecords">There are no states</div>     
  <% end -%>
</div>