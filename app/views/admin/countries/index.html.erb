<div class="container"><%= render :partial => 'admin/shared/search' -%></div>
<div class="container">
  <span class = "floatRight marginTop4" id = "page_entries_info"><%= page_entries_info @countries, :entry_name => '' -%></span>
  <h1 class="pageHeading">Countries <em><%= link_to 'back to store countries', [:admin, StoreCountry.new], :style => "font-size:12px; color:#999999;" -%></em></h1>
</div>

<div class="container">
  <% unless @countries.empty? -%>
    <% form_for([:admin, StoreCountry.new]) do |f| -%>
      <div class="formRow transparent" style = "float:left"><%= f.submit "Add Selected Countries", :class => "button" -%></div>
      <%= render :partial => 'countries' -%>
      <div class="formRow transparent" style = "float:left"><%= f.submit "Add Selected Countries", :class => "button" -%></div>
    <% end -%>
  <% else %>
    <div class = "noRecords">There are no countries</div>  
  <% end %>
</div>