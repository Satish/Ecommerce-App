<div class="container"><%= render :partial => 'admin/shared/search' -%></div>
<div class="container">
  <span class = "floatRight marginTop4"><%= page_entries_info @posts, :entry_name => '' -%></span>
  <h1 class="postHeading">posts(<%= link_to "+", new_admin_blog_post_path, :title => "Create New post" -%>)</h1>
</div>
<div class="container">
  <% if @posts.size > 0 -%>
    <div class="table">
      <div class = "tableHeader">
        <span class = "pct10">Sr. NO.</span>
        <span class = "pct35 textAlignLeft">Title</span>
        <span class = "pct20">Author</span>
        <span class = "pct10">Tags</span>
        <span class = "pct5">C</span>
        <span class = "pct10">Date</span>
        <span class = "pct10">-</span>
      </div>
      <div id = "postsContainer">
        <%= render :partial => 'posts' -%>
      </div>
    </div>
	<% else %>
    <div class = "noRecords">There are no posts</div>     
  <% end -%>
</div>